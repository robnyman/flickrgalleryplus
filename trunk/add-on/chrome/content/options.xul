<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
 
<prefwindow 
     title="Inline Code Finder Preferences"
     xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
 
	<prefpane label="Inline Code Finder Preferences">
		<preferences>
			<preference id="flickrGalleryPlus-autorun" name="extensions.flickrGalleryPlus.autorun" type="bool"/>
			<preference id="flickrGalleryPlus-inline-events" name="extensions.flickrGalleryPlus.inlineEvents" type="bool"/>
			<preference id="flickrGalleryPlus-inline-style" name="extensions.flickrGalleryPlus.inlineStyle" type="bool"/>
			<preference id="flickrGalleryPlus-javascript-links" name="extensions.flickrGalleryPlus.javascriptLinks" type="bool"/>
		</preferences>
		
		<groupbox>
			<caption label="Settings"/>
			<grid>
				<columns>
					<column flex="4"/>
					<column flex="1"/>
				</columns>
				<rows>
					<row>
						<label control="autorun" value="Autorun"/>
						<checkbox id="autorun" preference="flickrGalleryPlus-autorun"/>
					</row>
		
					<row>	
						<label control="inline-events" value="Inline events"/>
						<checkbox id="inline-events" preference="flickrGalleryPlus-inline-events"/>
					</row>
		
					<row>	
						<label control="inline-style" value="Inline Styles"/>
						<checkbox id="inline-style" preference="flickrGalleryPlus-inline-style"/>
					</row>
			
					<row>	
						<label control="javascript-links" value="javascript: links"/>
						<checkbox id="javascript-links" preference="flickrGalleryPlus-javascript-links"/>
					</row>
				</rows>
			</grid>
		</groupbox>	
		
	</prefpane>
 
</prefwindow>